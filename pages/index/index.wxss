.page-container{
    background-color: rgb(240, 240, 240);
}

.top-swiper{
    width: 750rpx;
    height: 300rpx;
}

.slide-image{
    width: 100%;
    height: 100%;
}
.btn-area{
   margin-top: 5rpx;
   padding-bottom: 10rpx;
   display: flex;
}

.btn-item{
   padding-right: 1rpx;
   display: flex;
   background-color: white;
   border-right: 1rpx solid rgb(240, 240, 240);
   flex-flow: column wrap;
   align-items: center;
   justify-content: center;
   width: 25%;
}

.btn-image{
  height: 60rpx;
  width: 60rpx;
  margin-top: 10rpx;
  border-radius: 30rpx;  
  background-color: purple;
}

.btn-text{
  margin-top: 15rpx;
  font-size: 24rpx;
  max-width: 100%;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; 
  word-break: break-all;
  text-align: center;
  line-height: 30rpx;
}

/*二手街的部分*/
.schoolStreet{
   width:100%;
   display: flex;
   flex-flow: row wrap;   
   background-color: white;
}

.street-title{
 
   margin-top: 5rpx;
   font-size: 24rpx;
   margin-left: 10rpx;
   height: 30rpx;
   margin-bottom: 5rpx;
}



.street-scrollView{
   border-top: 2rpx solid rgb(240, 240, 240);
   width: 750rpx;
   height: 216rpx;
   display: flex;
   white-space:nowrap;
} 

.street-item{
    display: inline-block;
    margin-right: 10rpx;
    width: 500rpx;
    margin-top: 8rpx;
    height: 200rpx;
}

.school-backgroundImage{

   width: 500rpx;
   height: 200rpx;
}

.street-school-info{
   width: 500rpx;
   height: 80rpx;
   position:relative;
   top:-80rpx;
   display: flex;
   flex-flow: row wrap;
   overflow: hidden;  /*隐藏多余的值*/
}

.merchandise{
    margin-top: 10rpx;
    width: 100%;
    display: table;  /*为了实现子类的多行居中,需要设置父类为表格*/
}
.merchandise-rent{
    width: 375rpx;
    margin-right: 2rpx;
    height: 100rpx;
    background-color: yellow;
    text-align: center;
    line-height:100rpx;
    display: inline-block;  /*测试后发现不加这句话,width和height不起作用*/
}

.merchandise-solicit{
    width: 50%;
    font-size: 20rpx;
    height: 100rpx;
    background-color: red;
    text-align: center;
    display: table-cell;  /*表格的垂直居中方式*/
    vertical-align:middle; /*它的使用时有局限性的,特定某些控件*/

}


/*商品专区*/
.merchandise-section{
    width: 100%;
    background-color: white;
    margin-top: 10rpx;
    display: flex;
    flex-flow: row wrap;
}

.merchandise-section-title{
    margin-left: 10rpx;
    height: 40rpx;
    width: 730rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    color:#1BC4A9;    
    /*background-color: purple;*/

}

.merchandise-scrollView{
    height: 667px;
    width: 100%;
}

.merchandise-item{
    width: 100%;
    padding-left: 10rpx;
    padding-right: 10rpx;
    display: flex;
    flex-flow: row wrap;
    border-bottom: 10rpx solid rgb(240, 240, 240);
}

.merchandise-item-top{
    width: 100%;
    display: flex;
}
.portrait{
    margin-top: 20rpx;
    margin-right: 10rpx;
    height: 40rpx;
    width: 40rpx;
    border-radius: 20rpx;
    background-color: red;
}

.userName{
    margin-top: 25rpx;
    margin-right: 20rpx;
    margin-bottom: 25rpx;
    height: 30rpx;
    width: 500rpx;
    font-size: 28rpx;
    line-height: 30rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
}

.price{
    margin-top: 25rpx;
    margin-left: 20rpx;
    width: 100rpx;
    position: absolute;
    right: 10rpx;
    font-size: 23rpx;
    height: 30rpx;
    line-height: 30rpx;
}

.merchandise-item-pictures{
    width: 100%;
    display: flex;
}
.picture{
    width: 200rpx;
    height: 120rpx;
    margin-right: 20rpx;
    background-color: orange;
}

/*一张图片的情况*/
.merchandise-item-picture view{

   margin-left: 50rpx;
   width: 260rpx;
   height: 140rpx;
   color: orange;
   border-radius: 5rpx;
}
.merchandiseDesc{
    margin-top: 10rpx;
    width: 100%;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
}

.merchandise-item-bottom{
    width: 730rpx;
    margin-top: 10rpx;
    border-top: 1rpx solid rgb(240, 240, 240);
    justify-content: space-between;
    display: flex;

}

.schoolName{
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    max-width: 360rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
    
}

.merchandiseSigntures{
    padding: 10rpx 0;
    display: flex;
    margin-left: 10rpx;
    justify-content: flex-end;
}

.merchandise-signture{

    background-color: darkgrey;
    margin-left: 10rpx;
    color:#1BC4A9;  
    line-height: 35rpx;
    height: 35rpx;
    font-size: 24rpx;
    border-radius: 5rpx;
}